# Unraid Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# UNRAID SYSTEM CONFIGURATION
# ============================================================================

# User/Group IDs (Unraid standard)
PUID=99      # Unraid 'nobody' user
PGID=100     # Unraid 'users' group

# Timezone
TZ=America/Chicago

# Unraid Server IP
UNRAID_IP=192.168.9.x

# Local Network CIDR
LOCAL_NETWORK=192.168.9.0/24

# Shared Network (for NZBHydra2)
SHARED_NETWORK=

# ============================================================================
# BESZEL MONITORING AGENT
# ============================================================================

# SSH public key from Beszel hub web UI
# 1. Access Beszel hub: http://192.168.9.2:8090 (or Voyager IP)
# 2. Add new system: "Unraid"
# 3. Copy the SSH public key
# 4. Paste it below
BESZEL_AGENT_KEY=ssh-ed25519_AAAAC3...your_key_here

# ============================================================================
# PLEX MEDIA SERVER
# ============================================================================

# Plex Claim Token (get from https://www.plex.tv/claim/)
PLEX_CLAIM=claim-xxxxxxxxxxxx

# ============================================================================
# KOMETA (PLEX META MANAGER)
# ============================================================================

KOMETA_CONFIG=config.yml
KOMETA_TIME=03:00
KOMETA_RUN=False
KOMETA_TEST=False
KOMETA_NO_MISSING=False

# ============================================================================
# ICLOUD PHOTO DOWNLOADER
# ============================================================================

ICLOUD_APPLE_ID=your_apple_id@example.com
ICLOUD_SYNC_INTERVAL=86400

# ============================================================================
# DOZZLE (DOCKER LOG VIEWER)
# ============================================================================

DOZZLE_USERNAME=
DOZZLE_PASSWORD=
DOZZLE_KEY=OG8isnh2i1zwnyripDf

# ============================================================================
# SPEEDTEST TRACKER
# ============================================================================

SPEEDTEST_APP_KEY=
SPEEDTEST_DB_CONNECTION=sqlite
SPEEDTEST_SCHEDULE=0 */6 * * *
SPEEDTEST_SERVERS=
SPEEDTEST_PRUNE_RESULTS_OLDER_THAN=0

# ============================================================================
# CHECKMATE (UPTIME MONITORING)
# ============================================================================

CHECKMATE_CLIENT_HOST=http://192.168.9.x:52343/api/v1
CHECKMATE_UPTIME_APP_API_BASE_URL=http://192.168.9.x:52343/api/v1
CHECKMATE_UPTIME_APP_CLIENT_HOST=http://192.168.9.x:3003
CHECKMATE_DB_CONNECTION_STRING=mongodb://192.168.9.x:27017
CHECKMATE_JWT_SECRET=your_jwt_secret_here
CHECKMATE_TOKEN_TTL=90d
CHECKMATE_ORIGIN=192.168.9.x
CHECKMATE_REDIS_URL=redis://192.168.9.x:6379/0

# ============================================================================
# NOTES
# ============================================================================

# - All paths in docker-compose.yml use Unraid conventions (/mnt/user/, /mnt/disk1/)
# - PUID=99 and PGID=100 are Unraid's nobody:users (standard for permissions)
# - Timezone should match your location for proper logging and scheduling
# - Get Plex claim token from https://www.plex.tv/claim/ (valid for 4 minutes)
# - Beszel agent key comes from your Beszel hub at http://192.168.9.2:8090
# - Some services may require additional first-time setup via web UI
